<Window x:Class="www.SoLaNoSoft.com.BearChessWpfCustomControlLib.ConfigureChessnutMoveWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties" 
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Title="{x:Static p:Resources.ConfigureChessnutMove}" Height="700" Width="620" SizeToContent="WidthAndHeight">
    <StackPanel>

        <Border Name="borderUseLEDs" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <CheckBox Grid.Row="0" Grid.Column="0" Margin="5" Name="checkBoxMoveFigures" ToolTip="{x:Static p:Resources.AutoMoveFigures}" Content="{x:Static p:Resources.AutoMoveFigures}"/>
                <CheckBox Grid.Row="1" Grid.Column="0" Margin="5" Unchecked="checkBoxUseLEDsUnChecked" Checked="checkBoxUseLEDsChecked" Name="checkBoxUseLEDs" ToolTip="{x:Static p:Resources.ShowLEDs}" Content="{x:Static p:Resources.ShowLEDs}"/>
            </Grid>
        </Border>
        <Border Name="borderLEDs" Margin="5" BorderBrush="Gray" BorderThickness="0">
            <TabControl Height="400" Name="tabControlLEDs">
                <TabItem Header="{x:Static p:Resources.LEDs}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <DockPanel Margin="0,5,0,0" LastChildFill="False" Grid.Column="0" Grid.Row="0">
                                <TextBlock DockPanel.Dock="Left" Margin="5" Text="{x:Static p:Resources.LEDs}" FontWeight="DemiBold"
                                        HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <Button Margin="5,0" Name="buttonShowDim" Background="Transparent"
                                         ToolTip="{x:Static p:Resources.ConnectTestLEDs}"
                                         BorderBrush="Transparent" Width="32" Height="32" Click="ButtonShowDim_OnClick">
                                        <Image Source="Assets/Icons/eye.png" />
                                    </Button>
                                    <Button Margin="5,0" Name="buttonShowDim2" Background="Transparent"
                                         Visibility="Collapsed"
                                         ToolTip="{x:Static p:Resources.Disconnect}"
                                         BorderBrush="Transparent" Width="32" Height="32" Click="ButtonShowDim_OnClick">
                                        <Image Source="Assets/Icons/eye_half.png" />
                                    </Button>
                                </StackPanel>

                            </DockPanel>
                            <Image Margin="5,0,5,0" Grid.Column="1" Grid.Row="0"
                                Source="Assets/Icons/bullet_red.png" VerticalAlignment="Center"
                                HorizontalAlignment="Center" ToolTip="{x:Static p:Resources.Red}" />
                            <Image Margin="5,0,5,0" Grid.Column="2" Grid.Row="0"
                                Source="Assets/Icons/bullet_green.png" VerticalAlignment="Center"
                                HorizontalAlignment="Center" ToolTip="{x:Static p:Resources.Green}" />
                            <Image Margin="5,0,5,0" Grid.Column="3" Grid.Row="0"
                                Source="Assets/Icons/bullet_blue.png" VerticalAlignment="Center"
                                HorizontalAlignment="Center" ToolTip="{x:Static p:Resources.Blue}" />

                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="25,0,5,0" ToolTip="{x:Static p:Resources.FromField}"
                                   Grid.Column="0" Grid.Row="1" Text="{x:Static p:Resources.MoveFrom}"/>
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Margin="25,0,5,0" ToolTip="{x:Static p:Resources.ToField}"
                                    Grid.Column="0" Grid.Row="2" Text="{x:Static p:Resources.MoveTo}"/>
                            <RadioButton GroupName="MoveFrom" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,5,0" Grid.Column="1" Grid.Row="1" Name="radioButtonMoveFromRed" />
                            <RadioButton GroupName="MoveFrom" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,5,0" Grid.Column="2" Grid.Row="1" Name="radioButtonMoveFromGreen" />
                            <RadioButton GroupName="MoveFrom" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,5,0" Grid.Column="3" Grid.Row="1" Name="radioButtonMoveFromBlue"/>

                            <Button Grid.Column="6" Grid.Row="1" Margin="5" Name="buttonShowMoveFrom"
                                 Background="Transparent" ToolTip="{x:Static p:Resources.ShowLEDs}"
                                 BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="Assets/Icons/eye.png" />
                            </Button>

                            <RadioButton GroupName="MoveTo" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,5,0" Grid.Column="1" Grid.Row="2" Name="radioButtonMoveToRed"/>
                            <RadioButton GroupName="MoveTo" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,5,0" Grid.Column="2" Grid.Row="2" Name="radioButtonMoveToGreen"/>
                            <RadioButton GroupName="MoveTo" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,5,0" Grid.Column="3" Grid.Row="2" Name="radioButtonMoveToBlue"/>
                            <Button Grid.Column="6" Grid.Row="3" Margin="5" Name="buttonShowInvalid"
                                 Background="Transparent" ToolTip="{x:Static p:Resources.ShowLEDs}"
                                 BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="6" Grid.Row="4" Margin="6" Name="buttonShowTakeBack"
                                 Background="Transparent" ToolTip="{x:Static p:Resources.ShowLEDs}"
                                 BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="6" Grid.Row="5" Margin="5" Name="buttonShowHint"
                                 Background="Transparent" ToolTip="{x:Static p:Resources.ShowLEDs}"
                                 BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="Assets/Icons/eye.png" />
                            </Button>
                            <Button Grid.Column="6" Grid.Row="6" Margin="5" Name="buttonShowBook"
                                 Background="Transparent" ToolTip="{x:Static p:Resources.ShowLEDs}"
                                 BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="Assets/Icons/eye.png" />
                            </Button>


                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Center" Name="checkBoxInvalidMoves"
                                   Margin="5,5,5,0" ToolTip="{x:Static p:Resources.InvalidFields}" 
                                   Grid.Column="0" Grid.Row="3" Content="{x:Static p:Resources.Invalid}"/>
                            <RadioButton GroupName="Invalid" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" Grid.Column="1" Grid.Row="3" Name="radioButtonInvalidRed"/>
                            <RadioButton GroupName="Invalid" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="2" Grid.Row="3" Name="radioButtonInvalidGreen"/>
                            <RadioButton GroupName="Invalid" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="3" Grid.Row="3" Name="radioButtonInvalidBlue"/>

                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Center" Name="checkBoxTakeBackMove"
                                   Margin="5" ToolTip="{x:Static p:Resources.FromAndToFieldUndo}"
                                   Grid.Column="0" Grid.Row="4" Content="{x:Static p:Resources.TakeBack}"/>
                            <RadioButton GroupName="TakeBack" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="1" Grid.Row="4" Name="radioButtonTakeBackRed"/>
                            <RadioButton GroupName="TakeBack" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="2" Grid.Row="4" Name="radioButtonTakeBackGreen" />
                            <RadioButton GroupName="TakeBack" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="3" Grid.Row="4" Name="radioButtonTakeBackBlue"/>


                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Center" Name="checkBoxHintMoves"
                                   Margin="5,5,5,0" ToolTip="{x:Static p:Resources.FromAndToFieldForHint}"
                                   Grid.Column="0" Grid.Row="5" Content="{x:Static p:Resources.Hint}"/>
                            <RadioButton GroupName="Hint" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="1" Grid.Row="5" Name="radioButtonHintRed"/>
                            <RadioButton GroupName="Hint" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="2" Grid.Row="5" Name="radioButtonHintGreen"/>
                            <RadioButton GroupName="Hint" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="3" Grid.Row="5" Name="radioButtonHintBlue"/>

                            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Center" Name="checkBoxBookMoves"
                                   Margin="5,5,5,0" ToolTip="{x:Static p:Resources.ShowBestBookMove}"
                                   Grid.Column="0" Grid.Row="6" Content="{x:Static p:Resources.BookMove}"/>
                            <RadioButton GroupName="BookMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="1" Grid.Row="6" Name="radioButtonBookRed"/>
                            <RadioButton GroupName="BookMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="2" Grid.Row="6" Name="radioButtonBookGreen" />
                            <RadioButton GroupName="BookMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="3" Grid.Row="6" Name="radioButtonBookBlue"/>

                            <CheckBox Name="checkBoxPossibleMoves" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,5,5,0"
        ToolTip="{x:Static p:Resources.ShowPossibleMovesOfFigure}" Checked="CheckBoxPossibleMoves_OnChecked" Unchecked="CheckBoxPossibleMoves_OnUnchecked"
        Grid.Column="0" Grid.Row="9" Content="{x:Static p:Resources.PossibleMoves}"/>

                            <RadioButton GroupName="PossibleMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="1" Grid.Row="9" Name="radioButtonPossibleMovesRed"/>
                            <RadioButton GroupName="PossibleMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="2" Grid.Row="9" Name="radioButtonPossibleMovesGreen"/>
                            <RadioButton GroupName="PossibleMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="3" Grid.Row="9" Name="radioButtonPossibleMovesBlue"/>

                            <Button Grid.Column="6" Grid.Row="9" Margin="5" Name="buttonShowCurrentPossibleMoves"
      Background="Transparent" ToolTip="{x:Static p:Resources.ShowLEDs}"
      BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick">
                                <Image Source="Assets/Icons/eye.png" />
                            </Button>

                            <CheckBox Name="checkBoxPossibleMovesEval" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,5,5,0"
                                   ToolTip="{x:Static p:Resources.ThisIsAGoodMove}"
                                   Grid.Column="0" Grid.Row="10" Content="{x:Static p:Resources.EvaluationGood}"/>

                            <RadioButton GroupName="GoodMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="1" Grid.Row="10" Name="radioButtonGoodMoveEvaluationRed"/>
                            <RadioButton GroupName="GoodMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="2" Grid.Row="10" Name="radioButtonGoodMoveEvaluationGreen"/>
                            <RadioButton GroupName="GoodMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="3" Grid.Row="10" Name="radioButtonGoodMoveEvaluationBlue"/>


                            <Button Grid.Column="6" Grid.Row="10" Margin="0,11,6,11" Name="buttonShowCurrentGoodMoveEvaluation"
                                 Background="Transparent" ToolTip="{x:Static p:Resources.ShowLEDs}"
                                 BorderBrush="Transparent" Width="20" Height="20" Click="ButtonShowHideLEDs_OnClick" HorizontalAlignment="Right">
                                <Image Source="Assets/Icons/eye.png" />
                            </Button>

                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,5,5,0"
                                    ToolTip="{x:Static p:Resources.ThisIsABadMove}"
                                    Grid.Column="0" Grid.Row="11" Text="{x:Static p:Resources.Bad}"/>

                            <RadioButton GroupName="BadMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="1" Grid.Row="11" Name="radioButtonBadMoveEvaluationRed" />
                            <RadioButton GroupName="BadMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="2" Grid.Row="11" Name="radioButtonBadMoveEvaluationGreen"/>
                            <RadioButton GroupName="BadMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="3" Grid.Row="11" Name="radioButtonBadMoveEvaluationBlue" />


                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,5,5,0"
          ToolTip="{x:Static p:Resources.PlayableMove}" Text="{x:Static p:Resources.Playable}"
          Grid.Column="0" Grid.Row="12">

                            </TextBlock>

                            <RadioButton GroupName="PlayableMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="1" Grid.Row="12" Name="radioButtonPlayableMoveEvaluationRed" />
                            <RadioButton GroupName="PlayableMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="2" Grid.Row="12" Name="radioButtonPlayableMoveEvaluationGreen"/>
                            <RadioButton GroupName="PlayableMove" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,0" Grid.Column="3" Grid.Row="12" Name="radioButtonPlayableMoveEvaluationBlue"/>

                        </Grid>


                        <StackPanel Orientation="Horizontal" />
                    </StackPanel>
                </TabItem>
                <TabItem Header="{x:Static p:Resources.ActiveLEDs}">
                    <StackPanel>

                        <CheckBox Margin="5" Name="checkBoxMoveLine" Content="{x:Static p:Resources.ActivateAllLEDsAlongMove}"></CheckBox>

                        <CheckBox Margin="5" Name="checkBoxOwnMoves" Content="{x:Static p:Resources.ShowOwnMoves}"></CheckBox>

                    </StackPanel>
                </TabItem>
            </TabControl>
        </Border>

    
        <DockPanel Margin="0,0,0,5">
            <Button DockPanel.Dock="Left" Margin="10,5,5,5" HorizontalAlignment="Left" Name="buttonOk" Width="32"
                 Height="32"
                 Click="ButtonOk_OnClick" Background="Transparent" BorderBrush="Transparent" >
                <Image Source="Assets/Icons/accept_button.png" />
            </Button>
            <ComboBox ToolTip="{x:Static p:Resources.SelectCurrentConfiguration}" Name="comboBoxSettings" DockPanel.Dock="Left"
                   Margin="15,5" SelectedItem="0" Width="150" Height="25" VerticalContentAlignment="Center" 
                   SelectionChanged="ComboBoxSettings_OnSelectionChanged" />
            <Button Name="buttonSaveAsNew" Click="ButtonSaveAsNew_OnClick" DockPanel.Dock="Left"
                 ToolTip="{x:Static p:Resources.SaveAsNewConfiguration}" Margin="5,0" Background="Transparent" BorderBrush="Transparent">
                <Image Source="Assets/Icons/cog_add.png" Height="30" Width="30"></Image>
            </Button>

            <Button Click="ButtonDelete_OnClick" Name="buttonDelete" DockPanel.Dock="Left"
                 ToolTip="{x:Static p:Resources.DeleteConfiguration}" Margin="5,0" Background="Transparent" BorderBrush="Transparent">
                <Image Source="Assets/Icons/bin.png" Height="30" Width="30"></Image>
            </Button>

            <Button DockPanel.Dock="Right" Margin="5,5,10,5" HorizontalAlignment="Right" Name="buttonCancel" Width="32"
                 Height="32"
                 Click="ButtonCancel_OnClick" Background="Transparent" BorderBrush="Transparent">

                <Image Source="Assets/Icons/cancel.png" />
            </Button>
        </DockPanel>
    </StackPanel>
</Window>
