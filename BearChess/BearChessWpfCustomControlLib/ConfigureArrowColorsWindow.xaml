<Window x:Class="www.SoLaNoSoft.com.BearChessWpfCustomControlLib.ConfigureArrowColorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties"
        mc:Ignorable="d" Icon="/BearChessWpfCustomControlLib;component/Assets/Icons/fill_color.png"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="WhiteSmoke"
        Title="{x:Static p:Resources.ConfigureArrowColors}" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Last move -->
            <CheckBox Margin="5" Grid.Column="0" Grid.Row="0" Name="checkboxLastMove" Unchecked="CheckboxPossibleMoves_OnUnchecked" Checked="CheckboxPossibleMoves_OnChecked">
                <TextBlock Text="{x:Static p:Resources.ShowLastMove}"/>
            </CheckBox>
            <Border  Grid.Column="1" Grid.Row="0" Margin="5,0,5,0" Height="30" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="1">
                <Border Name="borderLastMove"  Grid.Column="1" Grid.Row="0" Background="DarkGoldenrod"  Width="50"  Height="2" ></Border>
            </Border>
            <Button Click="buttonLastMove_Click" Margin="5" Grid.Column="2" Grid.Row="0"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/cog.png"></Image>
            </Button>
            <Button HorizontalAlignment="Right"  Click="buttonDefaultLastMove_OnClick" Margin="5" Grid.Column="3" Grid.Row="0"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/undo.png"></Image>
            </Button>
            <!-- Possible moves -->
            <CheckBox Margin="5" Grid.Column="0" Grid.Row="1" Name="checkboxPossibleMoves" Unchecked="CheckboxPossibleMoves_OnUnchecked" Checked="CheckboxPossibleMoves_OnChecked">
                <TextBlock Text="{x:Static p:Resources.PossibleMoves}"/>
            </CheckBox>
            <Border  Grid.Column="1" Grid.Row="1" Margin="5,0,5,0" Height="30" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="1">
                <Border Name="borderPossibleMoves"  Grid.Column="1" Grid.Row="0" Background="DarkGoldenrod"  Width="50"  Height="2" ></Border>
            </Border>
            <Button Click="buttonPossibleMoves_Click" Margin="5" Grid.Column="2" Grid.Row="1"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/cog.png"></Image>
            </Button>
            <Button HorizontalAlignment="Right"  Click="buttonDefaultPossibleMoves_OnClick" Margin="5" Grid.Column="3" Grid.Row="1"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/undo.png"></Image>
            </Button>
            <!-- Book moves -->
            <CheckBox Margin="5" Grid.Column="0" Grid.Row="2" Name="checkboxBookMoves" Unchecked="CheckboxPossibleMoves_OnUnchecked" Checked="CheckboxPossibleMoves_OnChecked">
                <TextBlock Text="{x:Static p:Resources.BookMove}"/>
            </CheckBox>
            <Border  Grid.Column="1" Grid.Row="2" Margin="5,0,5,0" Height="30" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="1">
                <Border Name="borderBookMoves"  Background="CadetBlue"  Width="50"  Height="2" ></Border>
            </Border>
            <Button Click="buttonBookMove_Click" Margin="5" Grid.Column="2" Grid.Row="2"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/cog.png"></Image>
            </Button>
            <Button HorizontalAlignment="Right"  Click="buttonDefaultBookMove_OnClick" Margin="5" Grid.Column="3" Grid.Row="2"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/undo.png"></Image>
            </Button>

            <!-- Best moves -->
            <TextBlock Grid.Column="0" Grid.Row="3" Margin="5,15,5,5" FontWeight="SemiBold" Text="{x:Static p:Resources.BestMove}"/>
            <CheckBox Margin="5,15,5,5" Grid.Column="1" Grid.ColumnSpan="4"  Grid.Row="3" Name="checkboxCombineBestMoves" Unchecked="CheckboxPossibleMoves_OnUnchecked" Checked="CheckboxPossibleMoves_OnChecked">
                <TextBlock Text="{x:Static p:Resources.Combine}"/>
            </CheckBox>

            <!-- Best moves Engine 1-->
            <CheckBox Margin="15,5,5,5" Grid.Column="0" Grid.Row="4" Name="checkboxBestMoves1" Checked="checkboxBestMoves_Checked" Unchecked="checkboxBestMoves_Unchecked">
                <TextBlock Text="Engine 1"/>
            </CheckBox>
            <Border  Grid.Column="1" Grid.Row="4" Margin="5,0,5,0" Height="30" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="1">
                <Border Name="borderBestMoves1"  Grid.Column="1" Grid.Row="0" Background="DarkGoldenrod"  Width="50"  Height="2" ></Border>
            </Border>
            <Button Click="buttonBestMoves1_Click" Margin="5" Grid.Column="2" Grid.Row="4"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/cog.png"></Image>
            </Button>
            <Button HorizontalAlignment="Right"  Click="buttonDefaultBestMoves1_OnClick" Margin="5" Grid.Column="3" Grid.Row="4"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/undo.png"></Image>
            </Button>
            <!-- Best moves Engine 2-->
            <CheckBox Margin="15,5,5,5" Grid.Column="0" Grid.Row="5" Name="checkboxBestMoves2" Checked="checkboxBestMoves_Checked" Unchecked="checkboxBestMoves_Unchecked">
                <TextBlock Text="Engine 2"/>
            </CheckBox>
            <Border  Grid.Column="1" Grid.Row="5" Margin="5,0,5,0" Height="30" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="1">
                <Border Name="borderBestMoves2"  Background="DarkGoldenrod"  Width="50"  Height="2" ></Border>
            </Border>
            <Button Click="buttonBestMoves2_Click" Margin="5" Grid.Column="2" Grid.Row="5"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/cog.png"></Image>
            </Button>
            <Button HorizontalAlignment="Right"  Click="buttonDefaultBestMoves2_OnClick" Margin="5" Grid.Column="3" Grid.Row="5"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/undo.png"></Image>
            </Button>
            <!-- Best moves Engine 3-->
            <CheckBox Margin="15,5,5,5" Grid.Column="0" Grid.Row="6" Name="checkboxBestMoves3" Checked="checkboxBestMoves_Checked" Unchecked="checkboxBestMoves_Unchecked">
                <TextBlock Text="Engine 3"/>
            </CheckBox>
            <Border  Grid.Column="1" Grid.Row="6" Margin="5,0,5,0" Height="30" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="1">
                <Border Name="borderBestMoves3"   Background="DarkGoldenrod"  Width="50"  Height="2" ></Border>
            </Border>
            <Button Click="buttonBestMoves3_Click" Margin="5" Grid.Column="2" Grid.Row="6"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/cog.png"></Image>
            </Button>
            <Button HorizontalAlignment="Right"  Click="buttonDefaultBestMoves3_OnClick" Margin="5" Grid.Column="3" Grid.Row="6"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/undo.png"></Image>
            </Button>

            <!-- Best moves Engine x-->
            <CheckBox Margin="15,5,5,5" Grid.Column="0" Grid.Row="7" Name="checkboxBestMovesN" Checked="checkboxBestMoves_Checked" Unchecked="checkboxBestMoves_Unchecked">
                <TextBlock Text="Engine n"/>
            </CheckBox>
            <Border  Grid.Column="1" Grid.Row="7" Margin="5,0,5,0" Height="30" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="1">
                <Border Name="borderBestMovesN"   Background="DarkGoldenrod"  Width="50"  Height="2" ></Border>
            </Border>
            <Button Click="buttonBestMovesN_Click" Margin="5" Grid.Column="2" Grid.Row="7"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/cog.png"></Image>
            </Button>
            <Button HorizontalAlignment="Right"  Click="buttonDefaultBestMovesN_OnClick" Margin="5" Grid.Column="3" Grid.Row="7"  Background="Transparent" BorderBrush="Transparent"  Width="24" Height="24">
                <Image Source="/BearChessWpfCustomControlLib;component/Assets/Icons/undo.png"></Image>
            </Button>
        </Grid>
        <Button Name="buttonOk" Margin="5" HorizontalAlignment="Left"  VerticalAlignment="Bottom"  Grid.Column="0" Background="Transparent" BorderBrush="Transparent"
            Grid.Row="2" Click="ButtonOk_OnClick"  Width="32" Height="32">
            <Image Source="/Assets/Icons/accept_button.png"></Image>
        </Button>
        <Button Name="buttonCancel" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Grid.Column="0" Background="Transparent" BorderBrush="Transparent"
            Grid.Row="2" Click="ButtonCancel_OnClick" Width="32" Height="32" >
            <Image Source="/Assets/Icons/cancel.png" ></Image>
        </Button>
    </Grid>
</Window>
