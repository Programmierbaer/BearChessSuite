<Window x:Class="www.SoLaNoSoft.com.BearChessWin.EngineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bearChessWpfCustomControlLib="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib;assembly=BearChessWpfCustomControlLib"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties;assembly=BearChessWpfCustomControlLib"
        mc:Ignorable="d" SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" Closing="EngineWindow_OnClosing" 
        Title="Engines" Height="200" MinWidth="600" Icon="../Assets/Icons/robot.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0" Name="stackPanelEngines" Orientation="Vertical" Margin="5"/>
        <Border  Background="AliceBlue"  Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button DockPanel.Dock="Right"  Height="32" VerticalAlignment="Top" Name="buttonHide" Width="32" Margin="5" Grid.Column="1" Grid.Row="0"  Click="ButtonHide_OnClick" Background="Transparent" BorderBrush="Transparent" >
                <Image Source="../Assets/Icons/eye.png"></Image>
            </Button>
            <Button DockPanel.Dock="Right"  Height="32" VerticalAlignment="Top" Name="buttonHide1" Width="32" Margin="5" Grid.Column="1" Grid.Row="0"  Click="ButtonHide_OnClick" Background="Transparent" BorderBrush="Transparent" Visibility="Collapsed">
                <Image Source="../Assets/Icons/eye_half.png"></Image>
            </Button>
                <Button DockPanel.Dock="Right"  Height="32" VerticalAlignment="Top" Name="buttonHide2" Width="32" Margin="5" Grid.Column="1" Grid.Row="0"  Click="ButtonHide_OnClick" Background="Transparent" BorderBrush="Transparent" Visibility="Collapsed">
                <Image Source="../Assets/Icons/eye_close.png"></Image>
            </Button>

            <bearChessWpfCustomControlLib:EngineValueGraphUserControl Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Height="145" Margin="5" Width="600" x:Name="engineValueGraph" HorizontalAlignment="Left" VerticalAlignment="Top" />

        </Grid>
            </Border>
    </Grid>
</Window>