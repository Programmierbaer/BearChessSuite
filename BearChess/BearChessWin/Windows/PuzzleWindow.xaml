<Window x:Class="www.SoLaNoSoft.com.BearChessWin.PuzzleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWin.Windows"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties;assembly=BearChessWpfCustomControlLib" 
        mc:Ignorable="d" Closing="PuzzleWindow_OnClosing"
        Title="{x:Static p:Resources.Puzzle}" Height="260" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" FontWeight="SemiBold" Text="{x:Static p:Resources.PuzzleTitle}"/>
        <TextBlock Margin="5" Name="textBlockTitle" Grid.Column="1" Grid.Row="0"></TextBlock>
        <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" FontWeight="SemiBold" Text="{x:Static p:Resources.PuzzlePublishTime}"/>
        <TextBlock Margin="5" Name="textBlockPublished" Grid.Column="1" Grid.Row="1"></TextBlock>
        <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" FontWeight="SemiBold" Text="{x:Static p:Resources.PuzzleUrl}"/>
        <TextBlock Margin="5" Name="textBlockUrl" TextWrapping="Wrap" Grid.Column="1" Grid.Row="2"></TextBlock>
        <TextBlock Margin="5" Grid.Column="0" Grid.Row="3" FontWeight="SemiBold" Text="{x:Static p:Resources.Fen}"/>
        <TextBlock Margin="5" Name="textBlockFen" TextWrapping="Wrap" Grid.Column="1" Grid.Row="3"></TextBlock>
        <TextBlock Margin="5" Grid.Column="0" Grid.Row="4" FontWeight="SemiBold" Text="{x:Static p:Resources.SolutionMoves}"/>
        <TextBlock Margin="5" Name="textBlockMoveCount" TextWrapping="Wrap" Grid.Column="1" Grid.Row="4"></TextBlock>
        <TextBlock Margin="5" Grid.Column="0" Grid.Row="5" FontWeight="SemiBold" Text="{x:Static p:Resources.ErrorTrials}"/>
        <TextBlock Margin="5" Name="textBlocktTries" TextWrapping="Wrap" Grid.Column="1" Grid.Row="5"></TextBlock>
        <Image  Name="imageSolved" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="6" Width="30" Height="30"  Source="../Assets/Icons/cup_gold.png" Visibility="Hidden"  ></Image>
        <DockPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" Margin="5" DockPanel.Dock="Bottom" LastChildFill="False">
            <Button Name="buttonRefresh" Margin="5,5,5,5" DockPanel.Dock="Left"  Width="30" Height="30" Background="Transparent" BorderBrush="Transparent"  Click="ButtonRefresh_OnClick" 
                    ToolTip="{x:Static p:Resources.PuzzleRequestNew}">
                <Image Source="../Assets/Icons/Board2DPieces32.png" ></Image>
            </Button>
            <Button Name="buttonToday" Margin="5,5,5,5" DockPanel.Dock="Left"  Width="30" Height="30" Background="Transparent" BorderBrush="Transparent"  Click="ButtonToday_OnClick" 
                    ToolTip="{x:Static p:Resources.PuzzleRequestToday}">
                <Image Source="../Assets/Icons/calendar_view_day.png" ></Image>
            </Button>
            <Button Name="buttonHint" Margin="25,5,5,5" DockPanel.Dock="Left"  Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Click="ButtonHint_OnClick"  
                    ToolTip="{x:Static p:Resources.PuzzleHint}">
                <Image Source="../Assets/Icons/emotion_question.png" ></Image>
            </Button>
            <Button Name="buttonResign" Margin="5,5,5,5" DockPanel.Dock="Left"  Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Click="ButtonResign_OnClick" 
                    ToolTip="{x:Static p:Resources.PuzzleSolution}">
                <Image Source="../Assets/Icons/6-2-chess-png.png" ></Image>
            </Button>
            <Button Name="buttonCancel"  Margin="5,5,5,5" DockPanel.Dock="Right"  Width="30" Height="30"  Background="Transparent" BorderBrush="Transparent" Click="ButtonCancel_OnClick">
                <Image Source="../Assets/Icons/door_out.png" ></Image>
            </Button>
        </DockPanel>
    </Grid>
</Window>
