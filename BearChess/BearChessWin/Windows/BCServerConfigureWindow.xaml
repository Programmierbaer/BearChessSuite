<Window x:Class="www.SoLaNoSoft.com.BearChessWin.BCServerConfigureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWin.Windows"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties;assembly=BearChessWpfCustomControlLib" 
        Icon="../Assets/BearChessServer.png"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="Height"
        Title="BearChess Server / FTP" Height="430" Width="300">
    <StackPanel>
        <GroupBox Margin="5">
            <GroupBox.Header>
                <TextBlock  FontWeight="SemiBold" Text="{x:Static p:Resources.BearChessServer}" />
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" Text="{x:Static p:Resources.ClientName}" />
                <TextBox Margin="5" Name="textBlockUserNameBCS" Grid.Column="1" Grid.Row="0"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" Text="{x:Static p:Resources.Server}" />
                <TextBox Margin="5" Name="textBlockServerBCS" Grid.Column="1" Grid.Row="2">localhost</TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="3" Text="{x:Static p:Resources.Port}" />
                <TextBox Margin="5" Name="textBlockPortBCS" Grid.Column="1" Grid.Row="3">8888</TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="4"  Text="{x:Static p:Resources.UseBCSforFTP}" />
                <CheckBox Margin="5" Name="checkBoxUseBCSforFTP" Checked="CheckBoxUseBCSforFTP_OnChecked"  Unchecked="CheckBoxUseBCSforFTP_OnUnchecked" Grid.Column="1" Grid.Row="4"></CheckBox>
            </Grid>
        </GroupBox>
        <GroupBox Margin="5" Name="groupBoxFTP">
            <GroupBox.Header>
                <TextBlock  FontWeight="SemiBold" Text="{x:Static p:Resources.FTP}" />
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" 
                        Text="{x:Static p:Resources.Username}" />
                <TextBox Margin="5" Name="textBlockUserName" Grid.Column="1" Grid.Row="0"></TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" 
                        Text="{x:Static p:Resources.Password}" />
                <PasswordBox PasswordChar="*" Margin="5" Name="textBlockPassword" Grid.Column="1" Grid.Row="1"></PasswordBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" 
                        Text="{x:Static p:Resources.Server}" />
                <TextBox Margin="5" Name="textBlockServer" Grid.Column="1" Grid.Row="2">ftp.server.com</TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="3" 
                        Text="{x:Static p:Resources.Port}" />
                <TextBox Margin="5" Name="textBlockPort" Grid.Column="1" Grid.Row="3">21</TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="4" 
                        Text="{x:Static p:Resources.Path}" />
                <TextBox Margin="5" Name="textBlockPath" Grid.Column="1" Grid.Row="4">/</TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="5" Text="{x:Static p:Resources.FileNameDialog}"/>
                <TextBox Margin="5" Name="textBlockFileName" Grid.Column="1" Grid.Row="5">games.pgn</TextBox>
                <TextBlock Margin="5" Grid.Column="0" Grid.Row="6"  Text="{x:Static p:Resources.SFTP}" />
                <CheckBox Margin="5" Name="checkBoxSFTP" Grid.Column="1" Grid.Row="6"></CheckBox>
            </Grid>
        </GroupBox>
        <DockPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Margin="5" DockPanel.Dock="Bottom"
                LastChildFill="False">
            <Button Name="buttonOk" Margin="5,5,5,5" DockPanel.Dock="Left" Width="28" Height="28"
                 Background="Transparent" BorderBrush="Transparent" IsDefault="True" Click="ButtonOk_OnClick">
                <Image Source="../Assets/Icons/accept_button.png"></Image>
            </Button>
            <Button Name="buttonCancel" Margin="5,5,5,5" DockPanel.Dock="Right" Width="28" Height="28"
                 Background="Transparent" BorderBrush="Transparent" IsCancel="True">
                <Image Source="../Assets/Icons/cancel.png"></Image>
            </Button>
        </DockPanel>
    </StackPanel>
</Window>
