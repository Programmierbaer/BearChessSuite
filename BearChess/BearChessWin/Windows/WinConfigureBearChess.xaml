<Window x:Class="www.SoLaNoSoft.com.BearChessWin.WinConfigureBearChess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessWin.Windows"
        xmlns:bearChessWin="clr-namespace:www.SoLaNoSoft.com.BearChessWin" Closing="WinConfigureBearChess_OnClosing"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties;assembly=BearChessWpfCustomControlLib" 
        KeyDown="WinConfigureBearChess_OnKeyDown"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="Height"
        Title="{x:Static p:Resources.BearChessConfiguration}" Height="730" Width="360">
    <StackPanel>
        <GroupBox Width="330" Margin="5" Name="GroupBoxLayout" Header="{x:Static p:Resources.Layout}" FontWeight="SemiBold" HorizontalAlignment="Left">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <RadioButton Grid.Row="0" Grid.Column="0" GroupName="layout" Name="radioButtonSDI" IsChecked="True"
                             Margin="10,5" >
                    <Image Width="16" Height="16" Source="../Assets/Icons/images_flickr.png" />
                </RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="1" GroupName="layout" Name="radioButtonMDI" IsChecked="False"
                             Margin="10,5">
                    <Image Width="16" Height="16" Source="../Assets/Icons/image.png" />
                </RadioButton>
            </Grid>
        </GroupBox>
        <GroupBox Width="330" Margin="5" Header="{x:Static p:Resources.Language}" FontWeight="SemiBold" HorizontalAlignment="Left" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <RadioButton Grid.Row="0" Grid.Column="0" GroupName="country" Name="radioButtonGlob" IsChecked="True" GotFocus="RadioButton_OnGotFocus"
                             AutomationProperties.HelpText="{x:Static p:Resources.LocalCountry}" Checked="RadioButton_OnGotFocus"
                             Margin="10,5" ToolTip="{x:Static p:Resources.LocalCountry}">
                    <Image Width="16" Height="16" Source="../Assets/Icons/globe_model.png" />
                </RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="1" GroupName="country" Name="radioButtonGB" Margin="10,5" 
                             AutomationProperties.HelpText="English language" Checked="RadioButton_OnGotFocus" 
                             ToolTip="English" GotFocus="RadioButton_OnGotFocus"> 
                    <Image Width="16" Height="16" Source="../Assets/Icons/flag_great_britain.png" />
                </RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="2" GroupName="country" Margin="10,5" Name="radioButtonDE"
                             GotFocus="RadioButton_OnGotFocus" AutomationProperties.HelpText="Deutsche Sprache" Checked="RadioButton_OnGotFocus" 
                             ToolTip="Deutsch">
                    <Image Width="16" Height="16" Source="../Assets/Icons/flag_germany.png" />
                </RadioButton>
            </Grid>
        </GroupBox>
        <GroupBox Width="330" Margin="5" Header="{x:Static p:Resources.Blind}" FontWeight="SemiBold" HorizontalAlignment="Left">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <CheckBox Name="checkBoxBlind" Margin="5" Grid.Column="0" Grid.Row="0" GotFocus="CheckBox_OnGotFocus" Checked="CheckBox_OnChecked" Unchecked="CheckBox_OnUnchecked"
                          AutomationProperties.HelpText="{x:Static p:Resources.IAmBlind}"
                          Content="{x:Static p:Resources.IAmBlind}"  FontWeight="Normal" />
                <CheckBox Name="checkBoxBlindSayMoveTime" Margin="5" Grid.Column="0" Grid.Row="2" GotFocus="CheckBox_OnGotFocus" Checked="CheckBox_OnChecked" Unchecked="CheckBox_OnUnchecked"
                          AutomationProperties.HelpText="{x:Static p:Resources.BlindSayMoveTime}"
                          Content="{x:Static p:Resources.BlindSayMoveTime}"  FontWeight="Normal"  />
                <GroupBox  Margin="5" Grid.Column="0" Grid.Row="3" Header="{x:Static p:Resources.TypeMoveAnnouncement}" HorizontalAlignment="Left"  FontWeight="Normal" >
                    <StackPanel Grid.Column="0" Grid.Row="3">

                        <RadioButton GroupName="moveType" Margin="15,5,5,5" Name="radioButtonBlindSayLong" IsChecked="True"  Content="{x:Static p:Resources.KnightG1F3}"
                                     AutomationProperties.HelpText="{x:Static p:Resources.KnightG1F3}" GotFocus="CheckBox_OnGotFocus" Checked="CheckBox_OnChecked" Unchecked="CheckBox_OnUnchecked"/>
                        <RadioButton GroupName="moveType" Margin="15,5,5,5" Name="radioButtonBlindSayShort" Content="{x:Static p:Resources.KnightF3}" GotFocus="CheckBox_OnGotFocus" Checked="CheckBox_OnChecked" Unchecked="CheckBox_OnUnchecked"
                                     AutomationProperties.HelpText="{x:Static p:Resources.KnightF3}"/>
                        <RadioButton  GroupName="moveType" Name="radioButtonBlindSayFIDERules" Margin="15,5,5,5" Grid.Column="0" Grid.Row="3" GotFocus="CheckBox_OnGotFocus" Checked="CheckBox_OnChecked" Unchecked="CheckBox_OnUnchecked"
                                      AutomationProperties.HelpText="{x:Static p:Resources.FIDERulesForMove}"
                                      Content="{x:Static p:Resources.FIDERulesForMove}" />

                    </StackPanel>
                </GroupBox>
                <CheckBox Name="checkBoxSaveBlindGames" Margin="5" Grid.Column="0" Grid.Row="4" GotFocus="CheckBox_OnGotFocus"
                          Content="{x:Static p:Resources.SaveBlindGamesAutomatically}"  FontWeight="Normal" 
                          AutomationProperties.HelpText="{x:Static p:Resources.SaveBlindGamesAutomatically}" />
                <CheckBox Name="checkBoxBlindNoEBoard" Margin="5" Grid.Column="0" Grid.Row="5" GotFocus="CheckBox_OnGotFocus" Checked="CheckBox_OnChecked" Unchecked="CheckBox_OnUnchecked"
                          AutomationProperties.HelpText="{x:Static p:Resources.BlindUserNoBoard}"
                          Content="{x:Static p:Resources.BlindUserNoBoard}"  FontWeight="Normal"  />
               
            </Grid>
        </GroupBox>
        <GroupBox Name="GroupBoxGames" Width="330" Margin="5" Header="{x:Static p:Resources.Games}" FontWeight="SemiBold" HorizontalAlignment="Left">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <CheckBox Name="checkBoxStartBasePosition" Margin="5" Grid.Column="0" Grid.Row="0"  FontWeight="Normal" 
                          Content="{x:Static p:Resources.StartOnBasePosition}" />
                <CheckBox Name="checkBoxSaveGames" Margin="5" Grid.Column="0" Grid.Row="1"  FontWeight="Normal" 
                          Content="{x:Static p:Resources.SaveGamesAutomatically}" />
                <GroupBox Margin="5" Grid.Row="2" Header="{x:Static p:Resources.AbortGames}"  FontWeight="Normal" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <CheckBox Name="checkBoxAllowEarly" Margin="5" Grid.Column="0"
                                  Unchecked="CheckBoxAllowEarly_OnUnchecked" Checked="CheckBoxAllowEarly_OnChecked"
                                  Grid.Row="0" Content="{x:Static p:Resources.AllowBearChessEndGameEarly}" />
                        <StackPanel Margin="5" Grid.Row="1" Orientation="Horizontal">
                            <TextBlock Margin="5" VerticalAlignment="Center" Text="{x:Static p:Resources.Evaluation}"></TextBlock>
                            <bearChessWin:NumericUpDownUserControl Margin="5"
                                                                   x:Name="numericUpDownUserControlEvaluation"
                                                                   MinValue="1"
                                                                   MaxValue="99" TextWidthProperty="30">
                            </bearChessWin:NumericUpDownUserControl>

                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <GroupBox Name="GroupBoxInternal" Width="330" Margin="5" Header="{x:Static p:Resources.Internal}" FontWeight="SemiBold" HorizontalAlignment="Left">
            <StackPanel>
                <CheckBox Name="checkBoxTournamentMode" Margin="5" Content="{x:Static p:Resources.TournamentMode}" FontWeight="Normal" />
                <CheckBox Name="checkBoxWriteLogFiles" Margin="5" Content="{x:Static p:Resources.WriteLogFiles}"  FontWeight="Normal"  />
                <CheckBox Name="checkBoxClearLogFiles" Margin="5" Content="{x:Static p:Resources.ClearLogFiles}"  FontWeight="Normal" 
                          ToolTip="{x:Static p:Resources.ClearLogFilesTip}"/>
            </StackPanel>
        </GroupBox>
        <DockPanel Margin="5" DockPanel.Dock="Bottom" LastChildFill="False">
            <Button Name="buttonOk" Margin="5,5,5,5" DockPanel.Dock="Left" Width="28" Height="28"
                    ToolTip="{x:Static p:Resources.Ok}" GotFocus="ButtonOk_OnGotFocus"   AutomationProperties.HelpText="{x:Static p:Resources.Ok}"
                    Background="Transparent" BorderBrush="Transparent" IsDefault="True" Click="ButtonOk_OnClick">
                <Image Source="../Assets/Icons/accept_button.png"></Image>
            </Button>
            <Button Name="buttonCancel" Margin="5,5,5,5" DockPanel.Dock="Right" Width="28" Height="28" GotFocus="ButtonOk_OnGotFocus"
                    ToolTip="{x:Static p:Resources.Cancel}"   AutomationProperties.HelpText="{x:Static p:Resources.Cancel}"
                    Background="Transparent" BorderBrush="Transparent" IsCancel="True">
                <Image Source="../Assets/Icons/cancel.png"></Image>
            </Button>
        </DockPanel>
    </StackPanel>
</Window>