<Window x:Class="www.SoLaNoSoft.com.BearChessWin.ChessComConfigureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties;assembly=BearChessWpfCustomControlLib" 
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" 
        Icon="../Assets/Icons/chesscom.png"
        Title="Chess.com" Height="250" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{x:Static p:Resources.Username}"/>
        <TextBox Margin="5" Name="textBlockUserName" Height="20"  Grid.Column="1" Grid.Row="0"></TextBox>
        <Button Name="buttonCheck" Margin="5" Grid.Column="2" Grid.Row="0"  Width="28" Height="28" Background="Transparent" BorderBrush="Transparent" Click="ButtonCheck_OnClick" >
            <Image Source="../Assets/Icons/information.png" ></Image>
        </Button>
        <TextBlock  Name="textBlockProfile" Margin="5" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" TextWrapping="Wrap" />
        <DockPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="5" Margin="5" DockPanel.Dock="Bottom" LastChildFill="False">
            <Button Name="buttonOk" Margin="5,5,5,5" DockPanel.Dock="Left"  Width="28" Height="28" Background="Transparent" BorderBrush="Transparent" IsDefault="True" Click="ButtonOk_OnClick" >
                <Image Source="../Assets/Icons/accept_button.png" ></Image>
            </Button>

            <Button Name="buttonCancel"  Margin="5,5,5,5" DockPanel.Dock="Right"  Width="28" Height="28"  Background="Transparent" BorderBrush="Transparent" IsCancel="True">
                <Image Source="../Assets/Icons/cancel.png" ></Image>
            </Button>
        </DockPanel>
    </Grid>
</Window>
