<Window x:Class="www.SoLaNoSoft.com.BearChessServerWin.Windows.BoardDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:www.SoLaNoSoft.com.BearChessServerWin.Windows"
        xmlns:bearChessWpfCustomControlLib="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib;assembly=BearChessWpfCustomControlLib"
        xmlns:p="clr-namespace:www.SoLaNoSoft.com.BearChessWpfCustomControlLib.Properties;assembly=BearChessWpfCustomControlLib"
        xmlns:userControls="clr-namespace:www.SoLaNoSoft.com.BearChessServerWin.UserControls"
        mc:Ignorable="d" Closing="BoardDetailWindow_OnClosing"
        Width="1000" Title="Game Detail Window" MinHeight="690" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Canvas Name="canvasBoard" Grid.Row="0" Grid.Column="0" />
        <Border Name="BorderChessBoard" Margin="1" Grid.Column="0" Grid.Row="0" BorderBrush="DarkGray"
                BorderThickness="1">
            <StackPanel>
                <userControls:DetailChessBoardUserControl Margin="5,5,5,0"
                                             x:Name="chessBoardUcGraphics"
                                             Visibility="Visible" />
                <bearChessWpfCustomControlLib:MaterialUserControl x:Name="materialUserControl" Margin="5,5,5,0"
                                                                  VerticalAlignment="Center" HorizontalAlignment="Left">
                </bearChessWpfCustomControlLib:MaterialUserControl>
            </StackPanel>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left">
            <Grid Name="GridClockAndMoves">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="450"></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Margin="1" BorderThickness="1" BorderBrush="DarkGray">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <bearChessWpfCustomControlLib:ChessClockUserControl Margin="5" HorizontalAlignment="Left"
                                                                            VerticalAlignment="Top"
                                                                            x:Name="chessBoardUcClockWhite"
                                                                            Visibility="Visible" />
                        <bearChessWpfCustomControlLib:ChessClockUserControl Margin="5" HorizontalAlignment="Left"
                                                                            VerticalAlignment="Top"
                                                                            x:Name="chessBoardUcClockBlack"
                                                                            Visibility="Visible" />
                    </StackPanel>
                </Border>
                <bearChessWpfCustomControlLib:MoveListPlainUserControl Grid.Row="1" Grid.Column="0" MinWidth="400"
                                                                       HorizontalAlignment="Left"
                                                                       x:Name="moveListPlainUserControl" />

            </Grid>
        </StackPanel>
        <userControls:EngineInfoUserControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                                       Margin="0" x:Name="engineInfoUserControl" />
    </Grid>

</Window>